if messages.errors
  .sixteen.wide.column
    .ui.negative.message
      i.close.icon
      for error in messages.errors
        div= error.msg
if messages.info
  .sixteen.wide.column
    .ui.warning.message
      i.close.icon
      for info in messages.info
        div= info.msg
if messages.success
  .sixteen.wide.column
    .ui.positive.message
      i.close.icon
      for success in messages.success
        div= success.msg
if messages.final
  .sixteen.wide.column
    .ui.info.message
      .content
        .header
          | Please go to the survey. 
          li To earn your SONA credit, you need to complete the survey 
          if messages.final[0].msg
              a(href=messages.final[0].msg) HERE.